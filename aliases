#!/bin/bash


# aliases

alias c='clear'
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'
alias .....='cd ../../../..'
alias e='logout; exit'
alias pull='git pull origin main'
alias push='git push origin main'
alias vm='proot-distro login ubuntu'
alias a='nano ~/.bashrc; source ~/.bashrc'
alias tclear='rm /tmp/torrent-stream/ -rf'
alias ps='ps | grep -v -e ps -e grep -e bash'
alias u='apt update; apt upgrade; apt autoremove'
alias ls='ls --color --group-directories-first -t -X'
alias la='ls -A --color --group-directories-first -t -X'
alias upip='pip list --outdated --format=freeze | grep -v '^\-e' | cut -d = -f 1  | xargs -n1 pip install -U'

# functions

ca() { bc <<< "$*"; }
sz() { du -sh "$1"; }
w() { chmod +x "$1"; }
cs() { cd "$1" && ls; }
ln() { cat "$1" | wc -l; }
apti() { apt install "$@"; }
path() { readlink -f "$1"; }
cmt() { git commit -m "$*"; }
dif() { sort "$@" | uniq -u; }
gurl() { git remote add origin "$1"; }
uln() { sort "$1" | uniq -u | wc -l; }
print() { cat "$1" | fold -sw "$COLUMNS"; }
